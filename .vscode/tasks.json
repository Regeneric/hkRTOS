{
  "version": "2.0.0",
  "tasks": [
    // ARM Platform
    {
      "label": "(ARM) [DEBUG] Configure",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S", ".",
        "-B", "build/arm/debug",
        "-DBUILD_FOR_ARM=ON",
        "-DCMAKE_BUILD_TYPE=Debug",
        "-DFREERTOS_KERNEL_PATH=${workspaceFolder}/lib/FreeRTOS-Kernel",
        "-DPICO_BOARD=pico2_w",         // pico ; pico_w ; pico2 ; pico2_w
        "-DPICO_PLATFORM=rp2350-arm-s"
      ],
      "problemMatcher": [],
      "group": "none"
    },
    {
      "label": "(ARM) [DEBUG] Build",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build", "build/arm/debug"
      ],
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "(ARM) [DEBUG] Configure + Build",
      "dependsOn": [
        "(ARM) [DEBUG] Configure",
        "(ARM) [DEBUG] Build"
      ],
      "group": { "kind": "build", "isDefault": true }
    },
    {
      "label": "(ARM) [DEBUG] Clean Build Directory",
      "type": "shell",
      "command": "rm",
      "args": [
        "-rf",
        "${workspaceFolder}/build/arm/debug"
      ],
      "problemMatcher": []
    },
    {
      "label": "(ARM) [Release] Configure",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S", ".",
        "-B", "build/arm/release",
        "-DBUILD_FOR_ARM=ON",
        "-DCMAKE_BUILD_TYPE=Release"
      ],
      "problemMatcher": [],
      "group": "none"
    },
    {
      "label": "(ARM) [Release] Build",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build", "build/arm/release"
      ],
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "(ARM) [Release] Configure + Build",
      "dependsOn": [
        "(ARM) [Release] Configure",
        "(ARM) [Release] Build"
      ],
      "group": { "kind": "build", "isDefault": true }
    },
    {
      "label": "(ARM) [Release] Clean Build Directory",
      "type": "shell",
      "command": "rm",
      "args": [
        "-rf",
        "${workspaceFolder}/build/arm/release"
      ],
      "problemMatcher": []
    },

